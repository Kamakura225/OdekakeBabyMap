<div class="container my-4">
  <h2 class="mb-4 fw-bold">お気に入り一覧</h2>

  <% if @bookmarked_places.any? %>
    <div class="row">
      <% @bookmarked_places.each do |place| %>
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <% if place.images.attached? %>
              <%= image_tag place.images.first.variant(resize_to_limit: [600, 300]), class: "card-img-top" %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to place.name, public_place_path(place), class: "text-decoration-none" %></h5>
              <p class="card-text"><%= truncate(place.description, length: 100) %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>まだお気に入りがありません。</p>
  <% end %>
</div>
