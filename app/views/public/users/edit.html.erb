<h1>ユーザー情報の編集</h1>

<%= form_with model: @user, url: public_user_path(@user), local: true do |f| %>
  <div>
    <%= f.label :nickname %><br>
    <%= f.text_field :nickname %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>
<% end %>